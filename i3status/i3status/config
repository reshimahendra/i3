general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 5
        color_good = '#2f343f'
		color_degraded = '#ebcb8b'
		color_bad = '#ba5e57'
}

order += "load"
order += "cpu_usage"
order += "disk /"
order += "disk /home"
order += "ethernet enp0s25"
order += "wireless wlp16s0"
order += "volume master"
order += "battery 0"
order += "tztime local"

load {
        format = "<span background='#f59335'> Ó§Ä %5min Load </span>"
}

cpu_usage {
        format = "<span background='#bf616a'> Ó¶à CPU: %usage used </span>"
}

disk "/" {
        format = "<span background='#fec7cd'> Ó•á %free Free </span>"
}

disk "/home" {
        format = "<span background='#a1d569'> Ó•Ö %free Free </span>"
}

ethernet enp0s25 {
        format_up = "<span background='#88c0d0'> Ó§Å %ip </span>"
        format_down = "<span background='#88c0d0'> Ó§Å Disconnected </span>"
}

wireless wlp16s0 {
        format_up = "<span background='#b48ead'> Ó§í %essid </span>"
        format_down = "<span background='#b48ead'> Ó§ë Disconnected </span>"
}

volume master {
        format = "<span background='#ebcb8b'> Ó§ï %volume </span>"
        format_muted = "<span background='#ebcb8b'> Ó§î Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
	last_full_capacity = true
        format = "<span background='#a3be8c'> Ó§ì %status %remaining </span>"
        format_down= "No battery"
        status_chr= "‚ö° CHR"
        status_bat= "üîã BAT"
        status_unk= "? UNK"
        status_full= "‚òª FULL"
        low_threshold= 30
        path="/sys/class/power_supply/CMB1/uevent"
}

tztime local {
		format = "<span background='#81a1c1'> %time </span>"
		format_time = "Ó§ß %a %-d %b %H:%M"
}

